{
  "explorer.compactFolders": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "pnpm-lock.yaml, pnpm-workspace.yaml",
    "*.ts": "$(capture).test.ts",
    "*.js": "$(capture).js.map, $(capture).d.ts, $(capture).d.ts.map, $(capture).cjs",
    "*.cjs": "$(capture).cjs.map, $(capture).d.cts, $(capture).d.cts.map",
    "Cargo.toml": "Cargo.lock"
  },

  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports.biome": "explicit"
    }
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },

  // TypeScript
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.suppressWhenTypeMatchesName": true,

  // Rust
  "rust-analyzer.linkedProjects": ["packages/plugin-swc/Cargo.toml"],

  // Code Spell Checker
  "cSpell.language": "en-AU",
  "cSpell.words": ["sayable"],

  // Todo Tree
  "todo-tree.general.tags": ["=====", "TODO"],
  "todo-tree.highlights.customHighlight": {
    "=====": {
      "type": "whole-line",
      "icon": "bookmark",
      "foreground": "#dadada",
      "gutterIcon": true,
      "hideFromTree": true
    },
    "TODO": {
      "type": "whole-line",
      "icon": "check",
      "foreground": "#ff9900",
      "gutterIcon": true
    }
  }
}
